@model List<StudentsModel>
@{
    ViewData["Title"] = "Privacy Policy";
    int numero = 0;
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>
    using ProductStudent.Entities;

<h1>Lista de Estudiantes</h1>
<a class="btn btn-outline.primary" asp-action="StudentAdd" asp-asp-controller="Student">Agregar Estudiante</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Tetramestre</th>
            </tr>
    </thead>
    
    <tbody>
        @foreach( var student in Model )
        {
        {
            numero++;
        }

         <tr>
            <th scope="row">@numero</th>
            <td>@student.name</td>
            <td>@student.LastName</td>
            <td>@student.Tetra</td>
            <td>
                <a class="btn btn-outline-info" asp-action="StudentEdit" asp-controller="Student" asp-route-id="@student.Id">Editar</a>
                <a class="btn btn-outline-danger" asp-action="StudentDelete" asp-controller="Student" asp-route-id="@student.Id">Borrar</a>

            </td>
         </tr>



        }
            

         
    </tbody>
</table>